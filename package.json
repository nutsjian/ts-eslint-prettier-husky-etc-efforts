{
  "name": "ts-eslint-prettier-husky-etc-efforts",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/nutsjian/ts-eslint-prettier-husky-etc-efforts.git",
  "author": "nuts.jian@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --clear --transpile-only src/index.ts",
    "style": "run-s style:**",
    "style:prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --ext .js,.ts ./src",
    "lint:fix": "eslint --fix --ext .js,.ts ./src",
    "prepare": "husky install",
    "commit": "git cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.26.0",
    "eslint-config-alloy": "^4.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4",
    "validate-commit-msg": "^2.14.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
